<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h2 class="deepshd"> ITEMS</h2>
    <p class="lead"></p>
  </div>
</div>

<section class="details-card">
    <div class="container-fluid">
        <div class="row">
          <% @items.each do |item| %>
              <div class="col-md-4 p-3">
                <div class="card-content" id="item-<%= item.id %>">
                    <div class="card-img" >
                        <img src="<%= item.image %>" alt="">
                        <div class="card-header">
                          <h1 class="card-title text-center"><%= link_to (item.name), item_path(item), {:style=>"color:black;"} %></h1>
                        </div>
                    </div>
                      <div class="card-desc card-footer">
                        <p><%= item.description %></p>
                        <p><%= item.price %> <%= item.active %> <%= item.inventory %></p>
                      </div>
                </div>
              </div>
          <% end %>
        </div>
    </div>
</section>
