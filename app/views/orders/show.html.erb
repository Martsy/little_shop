<h1>ORDER: <%= @order.id %></h1>

<section id="shipping-info">
  <h2>Shipping Address:</h2>
  <p><%= @order.name %></p>
  <p><%= @order.address %></p>
  <p><%= @order.city %></p>
  <p><%= @order.state %></p>
  <p><%= @order.zip %></p>
</section>

<h2>Order <%= @order.id %></h2>
<p>Order Submitted: <%= @order.created_at %></p>
<% @order.each do |item| %>
  <section id='item-<%= item.id %>'>
    <p><%= link_to item.name, "/items/#{item.id}" %></p>
    <p>Sold By: <%= link_to item.merchant.name, "/merchants/#{item.merchant_id}" %></p>
    <p>Price: <%= number_to_currency(item.price) %></p>
    <p>Quantity: <%= item.quantity %></p>
    <p>Subtotal: <%= number_to_currency(cart.subtotal(item.id)) %></p>
  </section>
<% end %>

<h3>Order Total: <%= number_to_currency(cart.total(@order)) %></h3>
