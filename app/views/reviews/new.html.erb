<html>
  <%= form_tag "/items/#{@item.id}/reviews" do %>
    <%= label_tag :title, 'Title'%>
    <%= text_field_tag :title, nil%>

    <%= label_tag :content, 'Content'%>
    <%= text_field_tag :content, nil%>

    <%= label_tag :rating, 'Rating'%>
    <%= number_field_tag :rating, nil, in: 1..5%>

    <%= submit_tag 'Submit'%>
    <% end %>
</html>
